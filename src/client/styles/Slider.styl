.Slider
  width 50%
  height 100%

  &-image
   width 100%
   height 100%
 
  &-link
    position absolute
    bottom 0
    left 0
    right 0
    background-color rgba(0,0,0,0.3)
    padding 1em
  
  &-title
    color main
    font-size 1.2em
    text-transform uppercase
    padding 0 .5em
  
  &-description
    color white
    font-size 1em
    padding 0.8em 0.7em
  

.carousel-cell
  width 100%
  height 100%

.flickity-viewport
  height 100%
  